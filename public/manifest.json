{
  "manifest_version": 3,
  "name": "Sharify Note",
  "version": "1.0",
  "description": "Chrome Extension with React + Vite + TS",

  "action": {
    "default_popup": "popup/index.html"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }
  ],

  "permissions": ["storage"]
}
